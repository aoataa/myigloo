<div class="container">
  <div class="d-flex flex-column">

    <div class="card-product">
    
        <div class="card-product-infos">
        <h2>Congratulations !</h2>
        <p>Your booking is now <strong>confirmed</strong>&#127881;</p>
            <h4>From <em><%= @booking.check_in.strftime('%e %B %Y')%></em></h4>
            <h4>To <em><%= @booking.check_out.strftime('%e %B %Y')%></em></h4>
        </div>
    </div>

    <div class="container-booked">
      <div class="title">
        <%#= link_to bookings_path do %>
        <%# end %>
      </div>
    <div class="booking-content">
      <div class="book-info">
          <h3><%#= @igloo.address %></h3>
      <div class="book-date d-flex justify-content-center">

      <div class="igloo-card reduce">
        <div class="igloo-image">
          <%= link_to igloo_path(@booking.igloo) do %>
          <%= cl_image_tag @booking.igloo.photos.first.key %>
          <% end %>
        </div>
        <div class="igloo-name">
          <h3><%= @booking.igloo.name %></h3>
          <p><%= @booking.igloo.description[0..70] %>...</p>
        <div class="star_icons">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star-half-alt"></i>
        </div>
        </div>
      </div>
      </div>
      </div>
    </div>
    </div>
  </div>
</div>




