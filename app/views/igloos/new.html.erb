<div class="container-simpleform ">
  <div class="simpleform-igloo">
  <h1 class="title_form"> Add an igloo </h1>

    <%= simple_form_for(@igloo) do |f| %>
      <%= f.input :name, placeholder: "Name", label: false %>
      <%= f.input :address, placeholder: "Address", label: false %>
      <%= f.input :description, placeholder: "Description", label: false %>
      <%= f.input :price, placeholder: "Price", label: false %>
      <%= f.input :photos, as: :file, label: false, input_html: { multiple: true } %>
      <%= f.submit 'create Igloo', class: 'btn btn-igloo' %>

    <% end %>

  </div>
</div>

